	<!DOCTYPE html>
	<html lang="fr">
	<head>
	  <meta charset="UTF-8">
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  
	  <title>Template e-commerce</title>
	  <style>
		/* Ajoutez ici votre propre style CSS personnalisé si nécessaire */
	  </style>
	  {% block stylesheets %}
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
	  {% endblock %}
	  {% block javascripts %}
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	  {% endblock %}
	</head>
	<body class="d-flex flex-column justify-content-between min-vh-100">
	
	  <!-- Barre de navigation -->
{% block header %}
{% endblock %}
	
	  <!-- Section de produits -->
	  <section class="products">
		<div class="container">
		  <div class="row">
			<div class="col-md-4 mb-4">
			  <div class="card">
				<img src="path/to/product-image.jpg" class="card-img-top" alt="Product Image">
				<div class="card-body">
				  <h5 class="card-title">Nom du produit</h5>
				  <p class="card-text">Description du produit</p>
				  <a href="#" class="btn btn-primary">Acheter</a>
				</div>
			  </div>
			</div>
			<!-- Répétez cette structure pour afficher plus de produits -->
		  </div>
		</div>
	  </section>
	
	  <!-- Pied de page -->
	  {% block footer %}
	  {% endblock %}
	
	  <!-- Scripts Bootstrap -->
	  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
	</body>
	</html>