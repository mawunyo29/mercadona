<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css">
  <title>Template e-commerce</title>
  <style>
    /* Ajoutez ici votre propre style CSS personnalisé si nécessaire */
  </style>
</head>
<body>

  <!-- Barre de navigation -->
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Mon E-commerce</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <a class="nav-link" href="#">Accueil</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Produits</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Panier</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="#">Contact</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Section de produits -->
  <section class="products">
    <div class="container">
      <div class="row">
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="path/to/product-image.jpg" class="card-img-top" alt="Product Image">
            <div class="card-body">
              <h5 class="card-title">Nom du produit</h5>
              <p class="card-text">Description du produit</p>
              <a href="#" class="btn btn-primary">Acheter</a>
            </div>
          </div>
        </div>
        <!-- Répétez cette structure pour afficher plus de produits -->
      </div>
    </div>
  </section>

  <!-- Pied de page -->
  <footer class="footer bg-light text-center">
    <div class="container">
      <span class="text-muted">© 2023 Mon E-commerce. Tous droits réservés.</span>
    </div>
  </footer>

  <!-- Scripts Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
