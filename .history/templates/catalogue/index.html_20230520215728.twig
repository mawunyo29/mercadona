{% extends 'base.html.twig' %}

{% block title %}
	Liste des produits
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block header %}
	{{ include('partials/header.html.twig') }}
{% endblock %}

{% block body %}
	<div class="">
		<div class="">
			<h1 class="text-center">Liste des produits</h1>
			<div class="d-flex align-items-center px-4">
				<div class="dropdown me-2">
					<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
						Trier par
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
						<li>
							<a class="dropdown-item" href="{{ path('app_catalogue', {'sort': 'price'}) }}">Prix</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_catalogue', {'sort': 'wording'}) }}">Nom</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_catalogue', {'sort': 'category'}) }}">Catégorie</a>
						</li>
					</ul>
				</div>
				<div class="dropdown">
					<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
						Ordre
					</button>
					<ul class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
						<li>
							<a class="dropdown-item" href="{{ path('app_catalogue', {'order': 'asc'}) }}">Croissant</a>
						</li>
						<li>
							<a class="dropdown-item" href="{{ path('app_catalogue', {'order': 'desc'}) }}">Décroissant</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div  class="d-flex">
			<div class="">
			{{ include('partials/filter.html.twig',  form) }}
		</div>
		<div class="">
			<div class="">
				<div class="">
					{% if products %}
						{% for product in products %}
							<div class=" ">
								{{ include('catalogue/card.html.twig', {product: product}) }}
							</div>
						{% endfor %}
					{% endif %}
				</div>
			</div>
		</div>
		</div>
		
	</div>
{% endblock %}

{% block footer %}
	{{ include('partials/footer.html.twig') }}
{% endblock %}
