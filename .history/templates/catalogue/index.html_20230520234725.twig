{% extends 'base.html.twig' %}

{% block title %}
	Liste des produits
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
{% endblock %}

{% block header %}
	{{ include('partials/header.html.twig') }}
{% endblock %}

{% block body %}
	<div class="row row-cols-1 row-cols-sm-3 row-cols-md-1 g-2 ">
		{{ include('partials/filter.html.twig',  form) }}
		<div class="col-md-9 col-sm-8 col-xl-10 ">
			<div class="-mr-6">
				<div class="album py-2">
					<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-2 px-2  row-cols-xl-8 ">
						{% if products %}
							{% for product in products %}
								<div class="col col-md-4 col-sm-5 col-xl-4">
									{{ include('catalogue/card.html.twig', {product: product}) }}
								</div>
							{% endfor %}
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block footer %}
	{{ include('partials/footer.html.twig') }}
{% endblock %}
