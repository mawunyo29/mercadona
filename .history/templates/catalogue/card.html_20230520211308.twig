<div class="col">
    <div class="card shadow-sm">
        {% if product.getImageName %}
			<div class=""> <img src="{{ vich_uploader_asset(product, 'imageFile')|imagine_filter('card') }}" class="img-thumbnail" alt="{{ product.getWording }}"> </div>
           
        {% endif %}
        <h5 class="card-title p-2">{{ product.getWording }}</h5>
        <div class="card-body">
            <p class="card-text overflow-y-scroll" style="max-height: 10rem">{{ product.getProductDescription|striptags|raw|nl2br }}</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary">{{ product.category }}</button>
                    <button type="button" class="btn btn-sm btn-outline-secondary"></button>
                </div>
                <p class="card-text">
                    Prix:
                    {% if product.promotions|length > 0 %}
                        <small class="font-weight-bold text-danger">{{ product.getCalculatePrice }} €</small>
                    {% else %}
                        <small class="text-muted">{{ product.getProductPrice }} €</small>
                    {% endif %}
                </p>
            </div>
        </div>
    </div>
</div>
<div class="card" style="width: 18rem;">
  
  <div class=""> <img src="{{ vich_uploader_asset(product, 'imageFile')|imagine_filter('card') }}" class="img-thumbnail card-img-top" alt="{{ product.getWording }}"> </div>
  <div class="card-body">
    <h5 class="card-title">Card title</h5>
    <p class="card-text overflow-y-scroll" style="max-height: 10rem">{{ product.getProductDescription|striptags|raw|nl2br }}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">An item</li>
    <li class="list-group-item">A second item</li>
    <li class="list-group-item">A third item</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>

