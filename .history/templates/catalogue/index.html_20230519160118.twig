{% extends 'base.html.twig' %}

{% block title %}
	Liste des produits
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
	
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	
{% endblock %}
{% block header %}
	{{ include('partials/header.html.twig') }}
{% endblock %}

{% block body %}
	<div class="d-flex">
		
		{{ include('partials/filter.html.twig',  form ) }}
		<div class="px-5">
			<h1 class="text-center">Liste des produits</h1>
			<div class="album py-2 ">
				<div class="">
					{% if products %}

						<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
							{% for product in products %}
								{{ include('catalogue/card.html.twig', {product:product} ) }}
							{% endfor %}
						</div>

					{% endif %}
				</div>
			</div>
		</div>
	</div>

{% endblock %}
{% block footer %}
	{{ include('partials/footer.html.twig') }}
{% endblock %}
